/* pages/zffy/zffy.wxss */
.order-status {
  border-top: 1px solid #f5f5f5;
  background: #FFF;
}

.order-status-item {
  position: relative;
  display: block;
  font-size: 28rpx;
  color: #555;
  flex: 1;
  text-align: center;
  padding: 20rpx 0 30rpx;

}

.order-status-item::after {
  position: absolute;
  left: 50%;
  top: 65rpx;
  margin-left: -30rpx;
  display: none;
  content: "";
  width: 60rpx;
  height: 8rpx;
  background: #f1d30b;
  border-radius: 40rpx;
}

.order-status-item-active {
  color: #333;
}

.order-status-item-active::after {
  display: block;
}

.team {
  border-top: 20rpx solid #F6F7F9;
}

.name {
  line-height: 90rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #F1F1F1;
  font-size: 26rpx;
  color: #606060;
}

.name .rt {
  color: #f1d30b;
}

.name image {
  width: 45rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.team .clear {
  padding: 15rpx 20rpx;
  font-size: 26rpx;
  color: #444444;
}

.team .clear .lf {
  width: 70%;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}


.team>text {
  display: inline-block;
  font-size: 20rpx;
  color: #999;
  margin: 0 20rpx 20rpx;
}