/* pages/participate/participate.wxss */
page {
  background: #f5f5f5;
  height: 100%;
}

image {
  width: 100%;
  max-height: 100%;
}

.search {
  background: #FFF;
  border-radius: 10rpx;
  padding: 20rpx;
}

.search .box {
  background: #f5f5f5;
  border-radius: 10rpx;
  overflow: hidden;
}

.search image {
  width: 30rpx;
  margin: 20rpx;
  vertical-align: sub;
}

.search input {
  display: inline-block;
  color: #999;
  font-size: 24rpx;
  width: 80%;
}

.order-status {
  border-top: 1px solid #f5f5f5;
  background: #FFF;
  padding: 20rpx 0 0rpx;
}

.order-status-item {
  position: relative;
  display: block;
  font-size: 28rpx;
  color: #555;
  flex: 1;
  text-align: center;
  height: 58rpx;
}

.order-status-item::after {
  position: absolute;
  left: 50%;
  top: 45rpx;
  margin-left: -30rpx;
  display: none;
  content: "";
  width: 60rpx;
  height: 8rpx;
  background: #f1d30b;
  border-radius: 40rpx;
}

.order-status-item-active {
  color: #333;
}

.order-status-item-active::after {
  display: block;
}

.order-item {
  margin-top: 20rpx;
  background: #FFF;
}

.order-seller {
  padding: 20rpx;
  align-items: center;
  font-size: 26rpx;
  justify-content: space-between;
}

.seller-avatar {
  align-items: center;
}

.seller-avatar image {
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.seller-avatar view {
  color: #666;
}

.order-seller text {
  color: #f1d30b;
}

.order-detail {
  background: #F6F7F8;
  padding: 20rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.order-img {
  display: block;
  flex: 0 0 150rpx;
  height: 150rpx;
  margin-right: 40rpx;
}

.order-text-wrapper {
  width: calc(100% - 190rpx);
}

.order-title {
  font-size: 26rpx;
  color: #444;
  margin-bottom: 20rpx;
}

.order-num {
  font-size: 26rpx;
  color: #444;
  margin: 20rpx 0;
}

.order-price {
  font-size: 28rpx;
  color: #222;
}

.orderNum-wrapper {
  position: relative;
  padding: 20rpx;
  line-height: 40rpx;
}

.orderNum-wrapper view {
  font-size: 26rpx;
  color: #999;
}

.orderNum-wrapper .btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -22.5rpx;
  width: 220rpx;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 24rpx;
  border-radius: 40rpx;
  color: #444;
  text-align: right;
}

.orderNum-wrapper image {
  width: 30rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}