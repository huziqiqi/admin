/* pages/personal/personal.wxss */
.icon{
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.user{
  padding: 20rpx 20rpx 0;
  align-items: center;
  justify-content: space-between;
}
.user-avatar{
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.user-name{
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.certification{
  font-size: 24rpx;
  color: #FFF;
  background: #222;
  padding: 6rpx 20rpx;
  border-radius: 40rpx;
  margin-top: 30rpx;
  text-align: center;
}
.my-list-wrapper{
  margin: 50rpx 0;
  padding: 0 20rpx;
}
.my-list-item{
  position: relative;
  flex: 1;
  text-align: center;
  line-height: 1;
}
.my-list-item::after{
  display: block;
  content: "";
  width: 1px;
  height: 40rpx;
  background: #DDD;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -20rpx;
}
.my-list-item:last-of-type::after{
  display: none;
}
.my-list-item-image{
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}
.my-list-item-text{
  font-size: 26rpx;
  color:#333;
}
.my-create-order-wrapper{
  padding: 20rpx;
  margin: 0 20rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, .2);
}
.title{
  font-size: 28rpx;
  color: #444;
  margin-bottom: 20rpx;
}
.my-create-order-item{
  width: 25%;
  text-align: center;
}
.my-create-order-item-image{
  display: block;
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}
.my-create-order-item-text{
  font-size: 26rpx;
  color: #444;
}
.list{
  padding: 0 20rpx;
  margin-top: 20rpx;
}
.list-item{
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
  justify-content: space-between;
  align-items: center;
}
.list-item>text{
  font-size: 28rpx;
  color: #333;
  flex: 1;
}
.list-item image{
  width: 20rpx;
  height: 20rpx;
}