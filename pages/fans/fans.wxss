/* pages/fans/fans.wxss */
.fans-item{
  background: #f5f5f5;
  padding: 30rpx 40rpx;
  align-items: center;
  margin-bottom: 40rpx;
}
.fans-avatar{
  display: block;
  flex: 0 0 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.text-wrapper{
  flex: 1;
  align-items: center;
  justify-content: space-between;
}
.name{
  font-size: 29rpx;
  color: #111;
}
.introduction{
  font-size: 25rpx;
  color: #606060; 
  margin-top: 20rpx;
}
.focus{
  font-size: 24rpx;
  border: 1px solid #333;
  width: 120rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  border-radius: 6rpx;
}
.on{
  color: #333;
}
.off{
  color: #606060;
  border-color: #606060;
}